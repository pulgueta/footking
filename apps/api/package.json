{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev:watch": "tsc -p tsconfig.build.json --watch",
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "db:reset": "tsx src/db/reset.ts",
    "db:seed": "tsx src/db/reset.ts && tsx src/db/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "exports": {
    "./hc": {
      "import": {
        "default": "./dist/src/hc.js",
        "types": "./dist/src/hc.d.ts"
      }
    },
    "./auth": {
      "import": {
        "default": "./dist/src/utils/auth.js",
        "types": "./dist/src/utils/auth.d.ts"
      }
    }
  },
  "dependencies": {
    "@builderbot/bot": "1.2.5",
    "@builderbot/database-mongo": "^1.2.5",
    "@builderbot/provider-meta": "1.2.5",
    "@footking/db": "workspace:*",
    "@hono/node-server": "^1.13.8",
    "@hono/zod-validator": "^0.4.2",
    "@libsql/client": "^0.14.0",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.34.4",
    "better-auth": "^1.1.15",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "hono": "^4.6.20",
    "hono-geo-middleware": "^0.1.2",
    "twilio": "^5.4.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "drizzle-kit": "^0.30.4",
    "drizzle-seed": "^0.3.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
