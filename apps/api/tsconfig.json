{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "composite": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "verbatimModuleSyntax": true,  
    "isolatedModules": true       
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}