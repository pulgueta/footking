{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "env": [
        "TURSO_DATABASE_URL",
        "TURSO_AUTH_TOKEN",
        "REDIS_URL",
        "REDIS_TOKEN",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "API_URL",
        "FRONTEND_URL"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "cache": false,
      "persistent": true
    }
  }
}
